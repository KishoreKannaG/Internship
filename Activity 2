#Q2
First_name=input("Enter your first name: ")
if(First_name):
  Last_name=input("Hello {} enter your last name: ".format(First_name))
  if(Last_name):
    print("Hello {}{} Welcome to python programming".format(First_name,Last_name))
  else:
    print("Enter a valid inputK")
else:
  print("Enter a valid input")

#Q3
product=input("Enter a product name: ")
code=input("Enter a {} code: ".format(product))
cost=input("Enter a {} cost: ".format(product))
